{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADFExample01"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"ConnectionInterfazContable_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ConnectionInterfazContable'"
		},
		"ConnectionSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ConnectionSqlDatabase1'"
		},
		"SourceProducts_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'SourceProducts'"
		},
		"OpenWeather_S_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "http://api.openweathermap.org/data/2.5/weather?q=London&appid=0d182a32cb83d38a75c5a5548d37db25"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADFExample01_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"ConnectionInterfazContable_connectionString": {
						"value": "[parameters('ConnectionInterfazContable_connectionString')]"
					},
					"ConnectionSqlDatabase1_connectionString": {
						"value": "[parameters('ConnectionSqlDatabase1_connectionString')]"
					},
					"SourceProducts_connectionString": {
						"value": "[parameters('SourceProducts_connectionString')]"
					},
					"OpenWeather_S_properties_typeProperties_url": {
						"value": "[parameters('OpenWeather_S_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}